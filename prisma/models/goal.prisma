model Goal {
  id          Int        @id @default(autoincrement())
  name        String     @db.Text
  code        String     @db.Text
  target      Float      @db.Double
  current     Float      @default(0) @db.Double
  color       String     @db.Text
  unit        String     @default("â‚¬") @db.VarChar(10)
  link        String     @default("#donation-section") @db.VarChar(500)
  message     String     @default("Toeta") @db.VarChar(100)
  description String     @db.Text
  issue       String?    @db.Text
  donations   Donation[]

  @@map("goals")
}
